{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "version",
    "service",
    "owners",
    "requirements",
    "slo"
  ],
  "properties": {
    "version": {
      "type": "integer"
    },
    "service": {
      "type": "string"
    },
    "owners": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "area",
          "title",
          "severity"
        ]
      }
    },
    "slo": {
      "type": "object"
    }
  }
}
